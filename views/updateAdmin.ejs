<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="/responsive.css">
    <link rel="shortcut icon" href="/img/freshfood-mini.PNG" type="image/x-icon">
    <title>FreshFood</title>
</head>
<body>
    <%- include('header') %>
    <!----------------------------------------------------------------------- MAIN ----------------------------------------------------------------------->
    <main>
        <h2 class="titre-profile" style="margin-top: 3%;margin-bottom: 3%;">Update the user of your choice</h2>

        <form method="POST" action="/auth/updateAdmin" style="margin-bottom: 4%;margin-top: 2%;" class="updateForm">
            <div>
                <label for="UserId">User Id</label>
                <input type="text" id="UserId" name="UserId" placeholder="Enter the Id of the User">   
            </div>
            <br>
            <div>
                <label for="lastName">New Last Name:</label>
                <input type="text" id="lastName" name="lastName" placeholder="Enter new last name">
            </div>
            <br>
            <div>
                <label for="firstName">New First Name:</label>
                <input type="text" id="firstName" name="firstName" placeholder="Enter new first name">
            </div>
            <br>
            <div>
                <label for="email">New Email:</label>
                <input type="email" id="email" name="email" placeholder="Enter new email">
            </div>
            <br>
            <div>
                <label for="password">New Password:</label>
                <input type="password" id="password" name="password" placeholder="Enter new password">
            </div>
            <br>
            <button type="submit">Update</button>
        </form>
        <% if (typeof validationUpdateMessage !== 'undefined') { %>
            <div class="<%= validationUpdateMessage.success ? 'success-message' : 'error-message' %>">
                <p><%= validationUpdateMessage.text %></p>
            </div>
        <% } %>

    </main>
    <%- include('footer') %>
    <script src="/scripts.js"></script>
</body>
</html>
